<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css'/>
    <style>
        .button {
            width: 100px;
            height: 50px;
            line-height: 50px;
            text-align: center;
            user-select: none;
            border: 1px solid black;
            border-radius: 2px;
            cursor: pointer;
        }
    </style>
</head>
<body ng-controller="controller">
<div class="button">button</div>
<script src="/javascripts/angular-1.5.6.js"></script>
<script>
	var app = angular.module( "myapp" , [] );
	app.controller( "controller" , function ( $scope , $http ) {
		$http( {
			headers : {
				'X-Requested-With' : 'XMLHttpRequest'
			} ,
			method : "get" ,
			url : "/getdata.ajax"
		} ).then( function ( response ) {
			// success
			console.log( "success" )
		} , function ( response ) {
			// err
			console.log( "err" , response )
		} );
	} );
	angular.bootstrap( document , [ "myapp" ] );
</script>
</body>
</html>
